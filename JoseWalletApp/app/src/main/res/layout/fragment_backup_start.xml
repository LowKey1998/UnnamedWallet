<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="32dp">

    <TextView
        android:id="@+id/backup_header"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_navy_medium"
        android:paddingBottom="7dp"
        android:text="@string/backup_header" />
    <TextView
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/primary_grey_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:text="@string/backup_explanation" />


    <TextView
        android:id="@+id/backup_subheader"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/primary_grey_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_start"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="DONE"
        android:theme="@style/ButtonLightBlueTheme" />
</LinearLayout>