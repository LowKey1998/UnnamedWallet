<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    android:padding="20dp"
              android:gravity="center"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/sendTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Crypto"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="20dp"
        />


    <ImageView
            android:id="@+id/assetIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_usdt"
            android:contentDescription="Asset Icon"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
    />



    <EditText
        android:id="@+id/editTextRecipient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipient Address"
        android:inputType="text"
        android:padding="12dp"

        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:layout_marginTop="16dp"/>

   <!-- <Spinner
        android:id="@+id/tokenSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextAmount"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>-->

    <TextView
        android:id="@+id/textGasFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#666"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textAllCaps="false"
        android:backgroundTint="#4CAF50"
        android:textColor="#fff"
        android:padding="12dp"
        android:layout_marginTop="24dp"/>

</LinearLayout>
